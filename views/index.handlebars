<!-- ./view/index.handlebars -->
<h1 class="display-4  text-center">你想對誰說幹話？</h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg" alt="engineer"
        class="img-thumbnail rounded float-left" width="200px" height="200px">
    </div>
    <div class="col-sm">
      <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg" alt="designer"
        class="img-thumbnail rounded float-left" width="200px" height="200px">
    </div>
    <div class="col-sm">
      <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg" alt="entrepreneur"
        class="img-thumbnail rounded float-left" width="200px" height="200px">
    </div>
  </div>
  <form method="POST" action="/">

    <div class="row">
      <div class="col-sm">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="targetRadios" id="targetRadios" value="engineer" checked>
          <label class="form-check-label" for="exampleRadios1">
            工程師
          </label>
        </div>
      </div>
      <div class="col-sm">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="targetRadios" id="targetRadios" value="designer">
          <label class="form-check-label" for="exampleRadios1">
            設計師
          </label>
        </div>
      </div>
      <div class="col-sm">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="targetRadios" id="targetRadios" value="entrepreneur">
          <label class="form-check-label" for="exampleRadios1">
            創業者
          </label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <button class="btn btn-primary" type="submit">產生幹話</button>
        {{#if trashtalk}}
        <div class="alert alert-info" role="alert">
          <span class="mr-2"></span> <code>{{trashtalk}}</code>
        </div>
        {{/if}}
      </div>
    </div>
</div>

</form>